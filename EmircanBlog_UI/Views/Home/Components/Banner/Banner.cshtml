@using EmircanBlog_Entity.Dtos
@model List<ArticleDto> 


<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @foreach (var item in Model)
            {

            <div class="item">
                <img src="~/images/@item.Image.FileName" width="600px" height="600px" alt="">
                <div class="item-content">
                    <div class="main-content">
                        <div class="meta-category">
                            <span>@item.category.Name</span>
                        </div>
                        <a href="post-details.html"><h4>@item.Title</h4></a>
                        <ul class="post-info">
                            <li><a href="#">Emircan Karagöz</a></li>
                            <li><a href="#">@item.CreatedDate</a></li>
                            <li><a href="#">12 Comments</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>