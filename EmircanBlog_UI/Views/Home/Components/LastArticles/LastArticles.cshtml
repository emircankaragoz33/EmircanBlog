@using EmircanBlog_Entity.Dtos
@model List<ArticleDto>



    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            
                    
                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                        <a href="/Blog/Index/@item.Id">  <img src="~/images/@item.Image.FileName" width="300px" height="500" alt=""> </a>
                                </div>
                                <div class="down-content">
                                    <span>@item.category.Name</span>
                                        <a href="/Blog/@item.Id"><h4>@item.Title</h4></a>
                                    <ul class="post-info">
                                        <li><a href="#">Emircan Karagöz</a></li>
                                        <li><a href="#">@item.CreatedDate</a></li>
                                        <li><a href="#">12 Comments</a></li>
                                    </ul>
                                       

                                     @Html.Raw(item.Description) 

                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    <li><a href="#">Beauty</a>,</li>
                                                    <li><a href="#">Nature</a></li>
                                                </ul>
                                            </div>
                                            <div class="col-6">
                                                <ul class="post-share">
                                                    <li><i class="fa fa-share-alt"></i></li>
                                                    <li><a href="#">LinkedIn</a>,</li>
                                               
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        }
                       
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a href="blog.html">Tüm yazılar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Son paylaşımlar *@
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" name="gs" method="GET" action="#">
                                    <input type="text" name="q" class="searchText" placeholder="type to search..." autocomplete="on">
                                </form>
                            </div>
                        </div>


                @*Son paylaşımalr bura.*@
                <vc:random-articles> </vc:random-articles>

            @*Kategoriler *@

        <vc:categories> </vc:categories>
        
                    </div>
                </div>
            </div>
        </div>
    </div>
