    <section class="page-heading" style="position: relative; background-image: url('/emircankaragoz.png'); background-size: cover; background-position: center 50%; height: 70%; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.9); ">
        <!-- Siyah Transparan Katman -->
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.8);"></div>

        <div class="container" style="position: relative; z-index: 1;">
            <div class="text-content">
                <br />
                <br />
                        <br />
                <br />
                        <br />
                        <br />
                        <br />

                <h2 style="text-align:center; color: white;">Bana ulaşın</h2>
            </div>
        </div>

        <!-- Kaydırma İkonu -->
        <div style="position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%);">
