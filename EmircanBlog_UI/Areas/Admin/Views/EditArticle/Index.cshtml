
@using EmircanBlog_Entity.Dtos.UpdateDtos
@model ArticleUpdateDto

@{
    ViewData["Title"] = "Makaleyi Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Makaleyi Düzenle</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group form-group-default">
                            <label>Makale Adı</label>
                            <input id="Title"
                                   name="Title"
                                   type="text"
                                   class="form-control"
                                   value="@Model.Title"
                                   placeholder="Makale adını girin" />
                        </div>
                    </div>
                    <div class="col-md-6 pe-0">
                        <div class="form-group form-group-default">
                            <label>Yayınlanma Tarihi</label>
                            <input id="CreatedDate"
                                   name="CreatedDate"
                                   type="text"
                                   class="form-control"
                                   value="@Model.CreatedDate.ToString("dd.MM.yyyy")"
                                   placeholder="Yayınlanma tarihini girin" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-group-default">
                            <label>Açıklama</label>
                            <input id="Description"
                                   name="Description"
                                   type="text"
                                   class="form-control"
                                   value="@Model.Description"
                                   placeholder="Açıklama giriniz." />
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group form-group-default">
                            <label>İçerik</label>
                            <textarea id="Content"
                                      name="Content"
                                      class="form-control"
                                      rows="10"
                                      placeholder="İçeriği girin">@Model.Content</textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit"
                            class="btn btn-primary">
                        Kaydet
                    </button>
                    <a href="@Url.Action("Index", "Articles", new { area = "Admin" })"
                       class="btn btn-danger">
                        İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



<script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

<script>
    CKEDITOR.replace('Content', {
        height: 400,
        toolbar: [
            { name: 'document', items: ['Source', '-', 'NewPage', 'Preview', '-', 'Templates'] },
            { name: 'clipboard', items: ['Cut', 'Copy', 'Paste', 'PasteText', 'PasteFromWord', '-', 'Undo', 'Redo'] },
            { name: 'editing', items: ['Find', 'Replace', '-', 'SelectAll'] },
            { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline', 'Strike', '-', 'RemoveFormat'] },
            { name: 'paragraph', items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote'] },
            { name: 'insert', items: ['Image', 'Table', 'HorizontalRule', 'SpecialChar'] },
            { name: 'styles', items: ['Styles', 'Format', 'Font', 'FontSize'] },
            { name: 'colors', items: ['TextColor', 'BGColor'] },
            { name: 'tools', items: ['Maximize'] }
        ]
    });
</script>