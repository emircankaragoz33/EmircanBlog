@using EmircanBlog_Entity.ViewModels

@model RegisterViewModel



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="path-to-your-css-file.css">
    <link rel="stylesheet" href="~/newadmintemplate/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/newadmintemplate/assets/css/plugins.min.css" />
    <link rel="stylesheet" href="~/newadmintemplate/assets/css/kaiadmin.min.css" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="~/newadmintemplate/assets/css/demo.css" />
    <style>
        .register-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background: #f8f9fa;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .register-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                margin-bottom: 5px;
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .text-danger {
            color: #dc3545;
        }


    </style>
</head>
<body>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <div class="register-container">
            <h2>Register</h2>
            <form method="post" asp-action="Register">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName">Adınız</label>
                    <input asp-for="FirstName"  class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Soyadınız</label>
                    <input asp-for="LastName"  class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Password">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Şifre Onay</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>

                <div asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
</body>
</html>
