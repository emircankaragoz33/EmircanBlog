
@using EmircanBlog_Entity.ViewModels
@model ArticleViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Makale Ekle</title>
    <link rel="stylesheet" href="path-to-your-css-file.css">
    <style>
        .toolbar {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            background: #f8f9fa;
        }
        .toolbar button {
            border: none;
            background: transparent;
            font-size: 16px;
            cursor: pointer;
        }
        .toolbar button:hover {
            background: #e9ecef;
        }
        .editor {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 10px;
            min-height: 150px;
            overflow: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Yeni Makale Ekle</h2>
        <form id="articleForm" method="post" enctype="multipart/form-data" >
            <!-- Article Title -->
            <div class="form-group">
                <label for="articleTitle">Başlık</label>
                <input asp-for="Title" type="text"
                       class="form-control"
                       id="articleTitle"
                       placeholder="Enter the article title" />
            </div>

            <!-- Article Category -->
            <div class="form-group">
                <label for="articleCategory">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"
                        id="articleCategory">
                    <option value=""> </option> 
                </select>
            </div>

            <!-- Article Size -->
            <div class="form-group">
                <label for="articleTitle">Başlık</label>
                <input asp-for="Description" type="text"
                       class="form-control"
                       id="articleTitle"
                       placeholder="Girişte sunulacak açıklama özetini giriniz." />
            </div>

            <!-- Article Content -->
           
                <div class="form-group">
                    <label asp-for="Content">Content</label>
                <textarea id="Content" name="Content" asp-for="Content" class="form-control" rows="10" placeholder="Enter content here">@Model.Content</textarea>
       
                </div>
             
              
            <!-- Article File Upload -->
            <div class="form-group">
                <label for="articleFile">Upload File</label>
                <input asp-for="formFile" type="file"
                       class="form-control-file"
                       id="articleFile" />
            </div>

            <!-- Action Buttons -->
            <div class="form-group">
                <button type="submit" class="btn btn-success">Gönder</button>
                <button type="reset" class="btn btn-danger">Sıfırla.</button>
            </div>
        </form>
    </div>


    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>

        CKEDITOR.replace('Content', {
            height: 400,
            toolbar: [
                { name: 'document', items: ['Source', '-', 'NewPage', 'Preview', '-', 'Templates'] },
                { name: 'clipboard', items: ['Cut', 'Copy', 'Paste', 'PasteText', 'PasteFromWord', '-', 'Undo', 'Redo'] },
                { name: 'editing', items: ['Find', 'Replace', '-', 'SelectAll'] },
                { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline', 'Strike', '-', 'RemoveFormat'] },
                { name: 'paragraph', items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote'] },
                { name: 'insert', items: ['Image', 'Table', 'HorizontalRule', 'SpecialChar'] },
                { name: 'styles', items: ['Styles', 'Format', 'Font', 'FontSize'] },
                { name: 'colors', items: ['TextColor', 'BGColor'] },
                { name: 'tools', items: ['Maximize'] }
            ]
        });
    </script>
</body>
</html>

